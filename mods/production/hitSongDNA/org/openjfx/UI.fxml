                <!--                <ProgressIndicator></ProgressIndicator>-->

            </HBox>
        </VBox>

    </top>
    <left>
        <VBox fx:id="sideBarLeft">

        </VBox>
    </left>
    <center>
        <TabPane fx:id="tabPane" >
            <Tab fx:id="tab1" text="Song Prediction" closable="false" >
                <GridPane>
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>
                    <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <VBox>

                            <Label fx:id="hitLabel">
                                <VBox.margin>
                                    <Insets bottom="0" left="25" right="0" top="0"/>
                                </VBox.margin>
                            </Label>
                        </VBox>
                        <Gauge fx:id="gauge1"

                               skinType="SIMPLE_DIGITAL"
                               decimals="0"
                               valueColor="white"
                               titleColor="WHITE"
                               subTitleColor="white"
                               unitColor="white"
                               needleColor="white"
                               tickLabelsVisible=""
                               tickMarkColor="black"
                               tickLabelOrientation="ORTHOGONAL"
                               animated="true"
                               animationDuration="500"
                               areaTextVisible="true"
                               title=""
                               shadowsEnabled="true"
                               prefWidth="400"
                               prefHeight="400"
                        />


                        <HBox GridPane.columnIndex="2"
                              GridPane.rowIndex="2" spacing="20">
                            <Tile fx:id="ledTile" skinType="LED"
                                  prefWidth="300"
                                  prefHeight="300"
                                  description="PREDICTION"
                                  active="false"
                                  activeColor="aqua">
                            </Tile>


                            <Gauge fx:id="gauge3"
                                   alert="true"
                                   alertMessage="Almost full"
                                   animated="true"
                                   animationDuration="500"
                                   areaTextVisible="true"
                                   layoutX="123.0"
                                   layoutY="113.0"
                                   lcdVisible="true"
                                   lcdFont="ELEKTRA"
                                   skinType="MODERN"
                                   decimals="0"
                                   maxValue="100"
                                   unit="RATE"
                                   unitColor="aqua"
                                   ledVisible="true"
                                   ledOn="true"
                                   ledBlinking="true"
                                   ledColor="chartreuse"
                                   ledType="STANDARD"
                                   title="CLASSIFICATION RATE"
                                   shadowsEnabled="true"
                                   backgroundPaint="white"
                                   foregroundPaint="black"
                                   titleColor="WHITE"
                            />

                        </HBox>
                    </VBox>
                    <VBox GridPane.columnIndex="1"
                          GridPane.rowIndex="1"
                          minWidth="600">
                        <ScrollPane fx:id="tab1Scroll"
                                    GridPane.columnIndex="1"
                                    GridPane.rowIndex="1"
                                    minWidth="650"
                                    maxWidth="650">
                            <GridPane.margin>
                                <Insets bottom="25.0" left="25.0" right="50.0" top="50.0"/>
                            </GridPane.margin>
                            <content>
                                <VBox fx:id="forForm" maxWidth="634" minWidth="634" alignment="CENTER">


                                </VBox>
                            </content>
                        </ScrollPane>

                        <VBox fx:id="paneLeft" spacing="10">
                            <VBox.margin>
                                <Insets bottom="1.0" left="0" right="0" top="15.0"/>
                            </VBox.margin>

                            <Button fx:id="classifyButton" text="" onAction="#executeClassification"

                                    prefWidth="650" minHeight="70" defaultButton="true"
                                    GridPane.columnIndex="0" GridPane.rowIndex="4"
                                    GridPane.columnSpan="2" GridPane.rowSpan="1"
                                    GridPane.halignment="CENTER"
                            >
                                <GridPane.margin>
                                    <Insets top="100" right="0" bottom="1" left="0"></Insets>
                                </GridPane.margin>
                                <FontAwesomeIconView fx:id="classifyIcon">
                                </FontAwesomeIconView>
                            </Button>
                            <HBox spacing="10">  <Button fx:id="saveButton" text="">

                            </Button>
                                <Button fx:id="clearButton" text="">

                                </Button></HBox>

                        </VBox>

                    </VBox>
