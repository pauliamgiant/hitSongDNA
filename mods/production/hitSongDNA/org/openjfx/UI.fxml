                    <top>
                        <HBox fx:id="topOfAttributes" alignment="CENTER_LEFT">
                            <Label fx:id="labelForAttributeSeclection" styleClass="formHeadings" text="Select Attribute">
                                   </Label>

                            <ComboBox fx:id="selectAttribute" minWidth="200" promptText="Select an Attribute">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Tempo"/>
                                        <String fx:value="Chords"/>
                                        <String fx:value="Title Repetition"/>
                                    </FXCollections>

                                </items>


                            </ComboBox>
                        </HBox>
                    </top>
                    <left>


                    </left>
                    <center>
                        <VBox fx:id="myPie">

                        </VBox>
                    </center>
                    <bottom>

                        <HBox>
                            <Tile fx:id="meter1" skinType="BAR_GAUGE" value="50">

                            </Tile>
                            <Tile fx:id="meter2" skinType="BAR_CHART">

                            </Tile>
                            <Tile fx:id="meter3" value="50" skinType="GAUGE_SPARK_LINE">

                            </Tile>
                            <Tile fx:id="meter4" value="50" skinType="RADAR_NODE_CHART">

                            </Tile>
                            <Tile fx:id="meter5" value="50" skinType="RADIAL_PERCENTAGE">

                            </Tile>
                            <Tile fx:id="meter6" value="50" skinType="TIMELINE">

                            </Tile>
                        </HBox>
                    </bottom>
                </BorderPane>

            </Tab>
            <Tab fx:id="tab3" text="Song Metrics" closable="false">
